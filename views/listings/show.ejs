                <!-- NEW DISPLAY PROPERTIES -->
                <div class="cards">
                    <div class="card-header">
                        <h2>Hosted By - <%= listing.owner.username%> <img   title="Wanderlust Verified User" class="verified-icon" src="data:image/png;base64," alt="error"> </h2>
                        <div class="price">â‚¹<%=listing.price.toLocaleString("en-IN") %></div>
                    </div>
                    <div class="card-content">
                       
                        <%=listing.description %>
                    </div>
                    <div class="card-footer">
                        <div class="location">
                            <img src="https://img.icons8.com/ios-filled/50/000000/place-marker.png" alt="Location Icon">
                            <span> <%=listing.country %> ,<%=listing.location %></span>
                        </div>

                        <!-- Book payment part -->
                        <% if( currUser && currUser._id.equals(listing.owner._id)==false){ %>
                            
                                <a href="/listings/payment" class="buttons">Reserve </a>
                                
                            
                        <% } %>
                       
                    </div>
                </div>


            </div>

        </div>

        <% if( currUser && currUser._id.equals(listing.owner._id)){ %>
            <div class="btns">
                <a href="/listings/<%= listing.id%>/edit" class="btn btn-secondary col-1 offset-3">Edit </a>
                <form method="post" action="/listings/<%=listing.id %>?_method=DELETE">
                    <button class="btn  btn-danger  offset-5  ">Delete</button>
                </form>
            </div>
            <% } %>

              
            


          
         

                <!-- Review Part  -->
                <div class="col-8 offset-3 mt-3 mb-3">
                    
                    <% if(currUser && currUser._id.valueOf()!=listing.owner._id.valueOf()){ %>
                   
                        <h4>Leave a Review</h4>
                        <hr>
                        <form action="/listings/<%= listing.id%>/reviews" method="post" novalidate
                            class="needs-validation">
                            <!-- <div class="mt-3 mb-3">
                    <label for="rating">Review</label>
                    <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                </div> -->

                            <!-- Rating part -->
                            <div class="mt-3 mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <fieldset class="starability-slot">

                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>

                            <!-- Comment Part -->
                            <div class="mt-3 mb-3">
                                <label for="comment" class="form-label">Comment</label>
                                <textarea required name="review[comment]" id="comment" cols="30" rows="5"
                                    class="form-control"></textarea>
                                <div class="valid-feedback">
                                    Good !You give your review.
                                </div>
                                <div class="invalid-feedback">
                                    Oops!Please give review.
                                </div>
                            </div>

                            <button class="btn btn-outline-primary mt-3 mb-3">Submit</button>
                        </form>
                        <% } %>




                            <!-- Show all review -->

                            <% if(listing.reviews.length> 0){ %>
                                <div class="row">
                                    <hr>
                                    <p><b>All Reviews</b></p>

                                    <% for(review of listing.reviews){ %>
                                        <div class="card col-5 ms-3 mb-3">
                                            <div class="card-body">
                                                <h5 class="card-title">@<%= review.author.username%>
                                                </h5>
                                                <p class="starability-result card-text" data-rating=<%=review.rating%>>
                                                </p>
                                                <p class="card-text">
                                                    <%=review.comment%>
                                                </p>

                                            </div>

                                            <!-- delete button  -->

                                            <% if( currUser && currUser._id.equals(review.author._id)){ %>
                                                <form method="post"
                                                    action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
                                                    class="mb-3 mt-3">
                                                    <button class="btn btn-sm btn-dark">Delete</button>
                                                </form>
                                                <% } %>

                                        </div>

                                        <% } %>
                                </div>
                                <% } %>


                </div>

                <div class="col-8 offset-3 mb-3">
                    <h3>Where you'll be </h3>
                    <div id="map"></div>

                </div>
    </body>

   

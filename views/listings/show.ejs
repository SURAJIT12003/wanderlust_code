            <div class="col-8 offset-3 mt-3">


                <h3>
                    <%=listing.title %> <p>(<%=listing.tags %>)</p>
                </h3>
            </div>
            

            <div class="card col-6 offset-3 show-card listing-card">
                <img src="<%=listing.image.url  %>" class="card-img-top show-img" alt="error">
               
